Vagrant.configure("2") do |config|
  config.vm.box = "bento/debian-13"

  # Manager Swarm
  config.vm.define "swarm-manager" do |manager|
    manager.vm.hostname = "swarm-manager"
    manager.vm.network "private_network", ip: "192.168.56.150"
    manager.vm.provider "virtualbox" do |vb|
      vb.memory = "2048"
      vb.cpus = 2
    end
  end

  # Worker 1
  config.vm.define "swarm-worker1" do |worker1|
    worker1.vm.hostname = "swarm-worker1"
    worker1.vm.network "private_network", ip: "192.168.56.151"
    worker1.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
      vb.cpus = 1
    end
  end

  # Worker 2
  config.vm.define "swarm-worker2" do |worker2|
    worker2.vm.hostname = "swarm-worker2"
    worker2.vm.network "private_network", ip: "192.168.56.152"
    worker2.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
      vb.cpus = 1
    end
  end

  # VM DB
  config.vm.define "db" do |db|
    db.vm.hostname = "db"
    db.vm.network "private_network", ip: "192.168.56.153"
    db.vm.provider "virtualbox" do |vb|
      vb.memory = "2048"
      vb.cpus = 2
    end
  end
end
